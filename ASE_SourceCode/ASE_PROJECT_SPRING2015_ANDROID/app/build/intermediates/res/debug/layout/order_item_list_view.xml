<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="75sp" android:gravity="center_vertical">

    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_name"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/item_quantity"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_name" />

    <TextView
        android:layout_width="37sp"
        android:layout_height="wrap_content"
        android:id="@+id/item_price"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/item_total" />

    <TextView
        android:layout_width="75sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="New Text"
        android:id="@+id/item_total"
        android:layout_alignTop="@+id/item_name"
        android:layout_alignParentEnd="true" />

</RelativeLayout><!-- From: file:/C:/Users/saiteja893/Documents/GitHub/ASE_INCREMENT_4/ASE_SourceCode/ASE_PROJECT_SPRING2015_ANDROID/app/src/main/res/layout/order_item_list_view.xml -->